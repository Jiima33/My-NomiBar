<% post.post_comments.each do |post_comment| %>
    <%= link_to user_path(post_comment.user.id) do %>
      <%= image_tag post_comment.user.get_profile_image(40, 40), class: "rounded-circle" %>
    <% end %>
    <%= post_comment.user.name %><br>
    <%= post_comment.created_at.strftime('%Y/%m/%d') %><br>
    <%= post_comment.comment %>
    <% if post_comment.user == current_user %>
      <%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete, remote: true, data: { confirm: '本当に削除してもよろしいですか？' } %>
    <% end %><br>
<% end %>
<div class="row">
  <div class="col-5">
    <div id="flash_message">
      <%= render 'layouts/flash_message' %>
    </div>
    <%= form_with model: [@post, @post_comment], local: false do |f| %>
    <div id='comments_error'>
      <%= render "layouts/errors", obj: @post_comment %>
    </div>
    <div class="form-group">
      <%= f.text_area :comment, rows: '2', placeholder: "コメントを記入して下さい　※2文字以上200文字以内",class: 'form-control comment' %>
    </div>
    <div class="form-group">
      <%= f.submit "コメントする", class: "btn btn-outline-info" %>
    </div>
    <% end %>
  </div>
</div>
<div class="container">
  <div class="row pt-3">
    <p class="col text-right">
      <%= search_form_for @q do |f| %>
        <%= f.label :title, "店名検索 :" %>
        <%= f.search_field :title_cont %>
        <%= f.submit "検索", class: "btn btn-inline" %>
      <% end %>
    </p>
  </div>
  
  <!--検索フォーム-->
  <div class="row pt-3">
    <%= render "public/posts/search_form" %>
  </div>
  
  <div class="row">
    <h4 class="col-10 pt-3"><strong>投稿一覧</strong></h4>
  </div>
  
  <!--並び替え-->
  <div class="row">
    <p class="col text-right">
      <%= sort_link(@q, :updated_at, '新着順' ) %>
      <%= sort_link(@q, :favorites_count, 'いいねが多い順' ) %>
    </p>
  </div>
  
  <!--投稿一覧-->
  <div class="row pt-3">
    <% if @posts.present? %>
      <%= render 'public/posts/posts_index' %>
    <% else %>
      <div class="mx-auto mt-5 d-none d-lg-block">
        <h3><strong>投稿はありません</strong></h3>
        <%= link_to "投稿一覧へ戻る", posts_path %>
      </div>
    <% end %>
  </div>
  
  <!--ページネーション-->
  <div class="mx-auto">
    <%= paginate @posts %>
  </div>
</div>

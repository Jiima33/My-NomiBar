<div class="container">
  <div class="row pt-3">
    <%= render "public/posts/search_form" %>
  </div>
    
  <div class="row">
    <h4 class="col-sm-4"><strong>投稿一覧</strong></h4>
  </div>
  <div class="row">
    <% if @posts.present? %>
      <%= render 'public/posts/posts_index' %>
    <% else %>
      <div class="mx-auto mt-5 d-none d-lg-block">
        <h3><strong>投稿はありません</strong></h3>
        <%= link_to "投稿一覧へ戻る", posts_path %>
       </div>
    <% end %>
  </div>
</div>

<div class="mx-auto mt-3 pb-5">
  <%= paginate @posts %>
</div>

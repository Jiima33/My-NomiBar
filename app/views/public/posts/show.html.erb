<h5>投稿</h5>
<h5>店名<br>
  <%= @post.title %>
</h5>
<h5>地域<br>
  <%= @post.area.name %>
</h5>
<h5>内容<br>
  <%= @post.body %>
</h5>
<h5>関連タグ<br>
<% @post.tags.each do |tag| %>
    <span><%= tag.name %></span>
<% end %>
</h5>
<div class="rate" date-rate="<%= @post.rate %>"></div>
<h5>投稿日<br>
<%= @post.created_at.strftime('%Y/%m/%d') %>
</h5>
<div class="favorite_buttons_<%= @post.id %>">
<%= render "public/favorites/favorite", post: @post %></div>
<div class="comment_area">
<%= render "public/post_comments/index", post: @post %></div><br>
<div class="new_comment">
<%= render "public/post_comments/form", post: @post, post_comment: @post_comment %></div>

<% if @post.user == current_user %>
  <%= link_to "編集", edit_post_path(@post) %>
  <%= link_to "削除", post_path(@post), method: :delete, remote: true, data: { confirm: '本当に削除してもよろしいですか？' } %>
<% end %>
<%= render "layouts/raty" %>
  <div class="container">
    <div class="row">
      <h5 class="col-8 pt-2 pb-2">投稿一覧</h5>
      <% posts.each do |post| %>
      <div class="card col-5 m-2 flex-direction:row">
        <div class="card-body">
          <h6 class="card-subtitle mb-2 text-muted"><%= post.created_at.strftime('%Y/%m/%d') %>
            <%= link_to user_path(post.user_id) do %>
            <%= image_tag post.user.get_profile_image(30,30), class: "rounded-circle card-image" %>
            <% end %></h6>
          <h6 class="card-title">店名:<%= link_to post.title, post_path(post.id) %></h6>
          <h6 class="card-subtitle mb-2 text-muted">エリア:<%= post.area.name %></h6>
          <h6 class="card-subtitle mb-2 text-muted">タグ:
            <% post.tags.each do |tag| %>
            <%= tag.name %>
            <% end %></h6>
          <p class="card-text">内容:<%= post.body %></p>
          <div class="favorite_buttons_<%= post.id %>">
          <%= render "public/favorites/favorite", post: post %></div>
          <a href="#" class="card-link">Another link</a>
        </div>
      </div>
      <% end %>
    </div>
  </div>

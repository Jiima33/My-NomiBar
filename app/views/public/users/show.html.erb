<div class="container px-5 px-sm-0">
  <div class="row">
    <h5 class="col-8 py-4"><%= @user.name %>さんのページ</h5>
  </div>
    <div class="row">
      <div class="col-2">
      <%= image_tag @user.get_profile_image(120,120) %>
      </div>
      <div class="col-3">
      <h6 class="pt-4">性別 :</br>
      <%= @user.gender_i18n %></h6>
      </div>
      <div class="col-3">
      <h6>自己紹介文 :</br>
      <%= @user.introduction %></h6>
      </div>
      <% if @user == current_user %>
        <p><%= link_to "プロフィール編集", edit_user_path(@user), class:"btn btn-outline-secondary" %></p>
      <% end %>
    </div>

    <!--会員投稿一覧-->
    <div class="col-8 mx-auto pt-2"></div>
    <%= render "public/posts/posts_index", posts: @posts %>
    </div>

  </div>
</div>
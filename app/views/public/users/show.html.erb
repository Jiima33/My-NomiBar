<div class="container">
  <div class="row">
    <h4 class="col-12 pt-3"><strong><%= @user.name %>さんのページ</strong></h4>
  </div>
  
  <div class="row">
    <div class="col-5">
      <%= image_tag @user.get_profile_image(200,200), class: "rounded-circle" %>
    </div>
    
    <div class="col-6">
      <div class="row border-bottom border-secondary">
        <div class= "col-5">
          性別:
        </div>
        <div class="col-5">
          <%= @user.gender_i18n %>
        </div>
      </div>
        
        <div class="row border-bottom border-secondary">
          <div class= "col-5">
            自己紹介:
          </div>
          <div class="col-5">
            <%= @user.introduction %>
          </div>
        </div>
      </div>
        
    <div class='row'>
        <% if @user == current_user %>
          <div class=" col-7 mt-3">
            <%= link_to "プロフィール編集", edit_user_path(@user), class: "btn btn-outline-secondary" %>
          </div>
        
          <div class="col-6 mt-3">
            <%= link_to "いいねした投稿", favorites_user_path(@user), class: "btn btn-outline-danger" %>
          </div>
        <% end %>
    </div>
  </div>
  
    <div class="row">
      <h4 class="col-10 pt-3"><strong>投稿一覧</strong></h4>
    </div>
    
    <!--並び替え-->
    <div class="row">
      <p class="col text-left">
        <%= sort_link(@q, :updated_at, '新着順' ) %>
        <%= sort_link(@q, :favorites_count, 'いいねが多い順' ) %>
      </p>
    </div>
    <!--会員投稿一覧-->
    <div class="row">
      <%= render "public/posts/posts_index", posts: @posts %>
    </div>
      
    <div class="mx-auto">
      <%= paginate @posts %>
    </div>
  </div>
</div>
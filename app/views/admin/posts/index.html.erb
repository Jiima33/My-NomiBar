<% @posts.each do |post| %>
  <%= link_to admin_user_path(post.user.id) do %>
    <%= image_tag post.user.get_profile_image(20,20) %>
  <% end %>
<h5>お店の名前<br>
  <%= link_to post.title, admin_post_path(post.id) %>
<h5>地域<br>
  <%= post.area.name %>
</h5>
<h5>内容<br>
  <%= post.body %>
</h5>
<h5>関連タグ<br>
  <% post.tags.each do |tag| %>
    <span><%= tag.name %></span>
  <% end %>
</h5>
<h5>投稿日<br>
  <%= post.created_at.strftime('%Y/%m/%d') %>
</h5>
<% end %>

<h5>投稿</h5>
<h5>お店の名前<br>
  <%= @post.title %>
</h5>
<h5>地域<br>
  <%= @post.area.name %>
</h5>
<h5>内容<br>
  <%= @post.body %>
</h5>
<h5>関連タグ<br>
<% @post.tags.each do |tag| %>
    <span><%= tag.name %></span>
<% end %>
</h5>
<h5>投稿日<br>
<%= @post.created_at.strftime('%Y/%m/%d') %>
</h5>
  <%= link_to "削除", admin_post_path(@post), method: :delete, date: {confirm: "本当に削除しますか？"} %>